{# src/KTSport/WebBundle/Resources/views/Default/clinical.html.twig #}
{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block title %}
	{% if app.request.locale == 'es' %}
        KTSport - Clinical
    {% elseif app.request.locale == 'en' %}
        KTSport - Clinical
    {% endif %}
{% endblock %}

{% block content %}
<!-- ************ BLOCK CONTENT *************** -->
	<div class="row collapse profesionales">
		<div class="large-12 small-12 columns">
			<div class="row">
			{% for profesional in profesionales %}
				{% if loop.index == 1 %}
					<div class="large-12 small-12 columns">
						<h4>{{ profesional.title|upper }}</h4>
						{{ profesional.content|raw }}
					</div>
					<div class="large-12 small-12 columns">
						<img src="{{ asset('bundles/syliusweb/images/web/mumbo_jumbo_box_big.png') }}" alt="Mumbo Jumbo Box" alt="" />
					</div>
				{% else %}
					<div class="large-6 small-12 columns">
						<h6>{{ profesional.title|upper }}</h6>
						{{ profesional.content|raw }}
					</div>
				{% endif %}
			{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
