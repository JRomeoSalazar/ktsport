{# src/KTSport/WebBundle/Resources/views/Default/index.html.twig #}
{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block title %}
	{% if app.request.locale == 'es' %}
        KTSport - ¿Qué es KT Tape?
    {% elseif app.request.locale == 'en' %}
        KTSport - ¿What is KT Tape?
    {% endif %}
{% endblock %}

{% block content %}
<!-- ************ BLOCK CONTENT *************** -->
	{% for button in buttons %}
		<div class="row collapse whatiskttape">
			{% if loop.index == 1 %}
				<div class="large-12 small-12 columns">
					<h2>{{ button.title|upper }}</h2>
					<div class="flex-video">
						<iframe width="890" height="501" src="{{ button.image }}" frameborder="0" allowfullscreen></iframe>
					</div>
				</div>
			{% elseif loop.index == 2 %}
				<div class="large-7 small-7 columns text">
					{{ button.content|raw }}
				</div>
				<div class="large-5 small-5 columns img1">
					<img src="{{ asset('bundles/syliusweb/images/web/') }}{{ button.image }}" alt="{{ button.title }}" />
				</div>
			{% elseif loop.index == 3 %}
				<div class="large-4 small-4 columns img2">
					<img src="{{ asset('bundles/syliusweb/images/web/') }}{{ button.image }}" alt="{{ button.title }}" />
				</div>
				<div class="large-8 small-8 columns text">
					{{ button.content|raw }}
				</div>
			{% elseif loop.index == 4 %}
				<div class="large-12 small-12 columns text">
					{{ button.content|raw }}
				</div>
			{% endif %}
		</div>
	{% endfor %}
{% endblock %}
