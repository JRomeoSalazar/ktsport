{% set product = item.variant.product %}
<tr>
    <td>{{ loop.index }}</td>
    <td>
        {{ include('SyliusWebBundle:Frontend/Shop/Product:_variant.html.twig', {'variant': item.variant}) }}
    </td>
    <td>
        {{ form_row(form.items[loop.index0].quantity, {'label': false}) }}
    </td>
    <td>
        <a href="{{ path('sylius_cart_item_remove', {'id': item.id}) }}" class="button alert radius small"><i class="icon-trash icon-white"></i></a>
    </td>
    <td>
        {{ item.unitPrice|sylius_price }}
    </td>
    <td style="text-align: right">
        {{ item.total|sylius_price }}
    </td>
</tr>
