{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import update %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('sylius_backend_newsletter_user_index') }}">{{ 'sylius.breadcrumb.newsletter_user.index'|trans }}</a></li>
    <li><a href="{{ path('sylius_backend_newsletter_user_show', {'id': newsletter_user.id}) }}">{{ newsletter_user.email }}</a></li>
    <li>{{ 'sylius.breadcrumb.edit'|trans }}</li>
</ol>
{% endblock %}


{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-pencil"></i> {{ 'sylius.newsletter_user.update_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_newsletter_user_update', {'id': newsletter_user.id}) }}" method="post" class="form-horizontal" novalidate>
    <input type="hidden" name="_method" value="PUT">
    {% include 'SyliusWebBundle:Backend/NewsletterUser:_form.html.twig' %}
    {{ update() }}
</form>
{% endblock %}