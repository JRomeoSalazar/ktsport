{% macro list(buttons) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as admin_buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if buttons|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', '#id') }}</th>
            <th>{{ sylius_resource_sort('title', 'sylius.button.title'|trans) }}</th>
            <th>{{ sylius_resource_sort('content', 'sylius.button.content'|trans) }}</th>
            <th>{{ sylius_resource_sort('url', 'sylius.button.url'|trans) }}</th>
            <th>{{ sylius_resource_sort('image', 'sylius.button.image'|trans) }}</th>
            <th>{{ sylius_resource_sort('bar', 'sylius.button.bar'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for button in buttons %}
        <tr id="{{ button.id }}">
            <td class="id">
                {{ button.id }}
            </td>
            <td>
                <a href="{{ path('ktsport_backend_button_show', {'id': button.id}) }}">{{ button.title }}</a>
            </td>
            <td>
                {{ button.content }}
            </td>
            <td>
                {{ button.url }}
            </td>
            <td>
                {{ button.image }}
            </td>
            <td>
                {{ button.bar }}
            </td>
            <td>
                <div class="pull-right">
                    {{ admin_buttons.edit(path('ktsport_backend_button_update', {'id': button.id})) }}
                    {{ admin_buttons.delete(path('ktsport_backend_button_delete', {'id': button.id})) }}
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.button.no_results'|trans) }}
{% endif %}

{% endmacro %}
