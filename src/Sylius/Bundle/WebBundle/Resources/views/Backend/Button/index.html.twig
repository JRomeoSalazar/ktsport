{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as admin_buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Button:macros.html.twig' import list %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.button.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ admin_buttons.create(path('ktsport_backend_button_create'), 'sylius.button.create'|trans) }}
        {{ admin_buttons.manage(path('ktsport_backend_button_index'), 'sylius.button.manage'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-folder-close"></i> {{ 'sylius.button.index_header'|trans|raw }}</h1>
</div>

{{ pagination(buttons) }}
{{ list(buttons) }}
{{ pagination(buttons) }}

{% endblock %}
