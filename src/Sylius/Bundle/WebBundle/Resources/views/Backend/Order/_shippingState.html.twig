{% set state = order.shippingState %}
{% set label = 'primary' %}

{% if 'backorder' == state %}
    {% set label = 'warning' %}
{% elseif 'dispatched' == state %}
    {% set label = 'info' %}
{% elseif 'partially_shipped' == state %}
    {% set label = 'warning' %}
{% elseif 'shipped' == state %}
    {% set label = 'success' %}
{% elseif 'returned' == state %}
    {% set label = 'info' %}
{% endif %}

<a href="{{ path('sylius_backend_shipment_update', {'id': order.shipments[0].id}) }}" class="no-underline">
	{{ misc.shipment_state(state) }}
</a>
