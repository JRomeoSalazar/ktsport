{% macro list(events) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if events|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', '#id') }}</th>
            <th>{{ sylius_resource_sort('title', 'sylius.event.title'|trans) }}</th>
            <th>{{ sylius_resource_sort('level', 'sylius.event.date'|trans) }}</th>
            <th>{{ sylius_resource_sort('level', 'sylius.event.city'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for event in events %}
        <tr id="{{ event.id }}">
            <td class="id">
                {{ event.id }}
            </td>
            <td>
                <a href="{{ path('ktsport_backend_event_show', {'id': event.id}) }}">{{ event.title }}</a>
            </td>
            <td>
                {{ event.date|date('d-m-Y') }}
            </td>
            <td>
                {{ event.city }}
            </td>
            <td>
                <div class="pull-right">
                    {{ buttons.edit(path('ktsport_backend_event_update', {'id': event.id})) }}
                    {{ buttons.delete(path('ktsport_backend_event_delete', {'id': event.id})) }}
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.event.no_results'|trans) }}
{% endif %}

{% endmacro %}
