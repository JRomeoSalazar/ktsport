{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('ktsport_backend_event_index') }}">{{ 'sylius.breadcrumb.event.index'|trans }}</a></li>
    <li>{{ event.title }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.manage(path('ktsport_backend_event_index'), 'sylius.event.manage'|trans) }}
        {{ buttons.edit(path('ktsport_backend_event_update', {'id': event.id})) }}
        {{ buttons.delete(path('ktsport_backend_event_delete', {'id': event.id}), null, false, false) }}
    </div>
    <h1><i class="glyphicon glyphicon-flag"></i> {{ 'sylius.event.show_header'|trans|raw }}</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th colspan="2">#{{ event.id }} {{ event.title }}</th>
        </tr>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><strong>{{ 'sylius.event.date'|trans }}</strong></td>
            <td>{{ event.date|date('d-m-Y') }}</td>
        </tr>
        <tr>
            <td><strong>{{ 'sylius.event.city'|trans }}</strong></td>
            <td>{{ event.city }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}