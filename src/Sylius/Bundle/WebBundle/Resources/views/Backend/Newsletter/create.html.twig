{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import create %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li><a href="{{ path('sylius_backend_newsletter_index') }}">{{ 'sylius.breadcrumb.newsletter.index'|trans }}</a></li>
    <li>{{ 'sylius.breadcrumb.new'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-plus-sign"></i> {{ 'sylius.newsletter.create_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form id="form" action="{{ path('sylius_backend_newsletter_create') }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/Newsletter:_form.html.twig' %}
    {{ create() }}
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
	<script type="text/javascript">
        var uri = "{{ app.request.scheme ~ '://' ~ app.request.httpHost ~ app.request.baseUrl ~ '/uploaded/' }}";
	</script>
    {{ tinymce_init() }}
    <script type="text/javascript" src="{{ asset('bundles/syliusweb/js/newsletter_validation.js') }}"></script>
{% endblock %}