{% macro list(bars) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if bars|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', '#id') }}</th>
            <th>{{ sylius_resource_sort('title', 'sylius.bar.title'|trans) }}</th>
            <th>{{ sylius_resource_sort('level', 'sylius.bar.level'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for bar in bars %}
        <tr id="{{ bar.id }}">
            <td class="id">
                {{ bar.id }}
            </td>
            <td>
                <a href="{{ path('ktsport_backend_bar_show', {'id': bar.id}) }}">{{ bar.title }}</a>
            </td>
            <td>
                {{ bar.level }}
            </td>
            <td>
                <div class="pull-right">
                    {{ buttons.edit(path('ktsport_backend_bar_update', {'id': bar.id})) }}
                    {{ buttons.delete(path('ktsport_backend_bar_delete', {'id': bar.id})) }}
                </div>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.bar.no_results'|trans) }}
{% endif %}

{% endmacro %}
